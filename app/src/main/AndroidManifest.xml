<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sunkai.heritage">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".Data.GlobalContext"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="登录" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/AppThemeNoActionBar"/>
        <activity android:name=".folkInformation" />
        <activity android:name=".RegistActivity" />
        <activity android:name=".JoinActivity" />
        <activity android:name=".DebugActivity" />
        <activity android:name=".activityInformationActivity" />
        <activity
            android:name=".MyOrderActivity"
            android:label="我的预约" />
        <activity
            android:name=".userCommentDetail"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".focusInformation" />
        <activity
            android:name=".SearchActivity"
            android:label="搜索" />
        <activity
            android:name=".SettingActivity"
            android:label="设置" />
        <activity android:name=".AddFindCommentActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.sunkai.heritage.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".PermissionsActivity" />
        <activity
            android:name=".UserOwnTiezi"
            android:label="我的帖子" />
        <activity android:name=".AboutUSActivity" />
        <activity android:name=".ConnectUsActivity"></activity>
    </application>

</manifest>