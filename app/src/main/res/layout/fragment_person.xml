<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentPersonLinearLayout"
    style="@style/AppThemeNoActionBarNoBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/superLightGrey"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <include layout="@layout/user_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="18sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_person_my_tiezi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_format_size_orange_300_24dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_format_size_orange_300_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_comment" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/superLightGrey" />

                <TextView
                    android:id="@+id/fragment_person_my_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_thumb_up_black_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_like" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/superLightGrey" />

                <TextView
                    android:id="@+id/fragment_person_my_collect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_bookmark_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_bookmark_black_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_collection" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/superLightGrey" />


                <TextView
                    android:id="@+id/fragment_person_my_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_message_black_24dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_message_black_24dp"
                    android:text="@string/my_message" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/superLightGrey" />

                <TextView
                    android:id="@+id/person_fragment_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_settings_orange_300_24dp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_settings_orange_300_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/setting" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</LinearLayout>