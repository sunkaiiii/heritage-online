<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/login_background"
    tools:context="com.example.sunkai.heritage.Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@mipmap/login_edittextbackground"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/login_email"
            android:alpha="0.8"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"/>

        <AutoCompleteTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/password" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@mipmap/login_edittextbackground"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/login_password"
            android:alpha="0.8"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/activity_login_regist" />
        </LinearLayout>


<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="1"
    android:columnCount="2"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/activity_login_find_password"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:id="@+id/gridLayout"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
        <Button
            android:id="@+id/email_sign_in_button"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_column="0"
            android:alpha="0.9"
            android:background="@mipmap/login_buttonbackground"
            android:text="登录"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/activity_login_regist"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_column="1"
            android:layout_marginEnd="8dp"
            android:alpha="0.9"
            android:background="@mipmap/login_buttonbackground"
            android:text="注册"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_columnSpan="1"
            android:layout_gravity="center"/>
    </GridLayout>

    <TextView
        android:id="@+id/activity_login_jump_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="6dp"
        android:text="跳过登录"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/activity_login_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="忘记密码?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toRightOf="@+id/activity_login_jump_login"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/activity_login_Debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="工程调试"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteX="81dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.595" />



</android.support.constraint.ConstraintLayout>
