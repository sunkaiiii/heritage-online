<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sunkai.heritage.findFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120sp"
        android:layout_margin="15sp"
        android:id="@+id/find_fragment_Relative">
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/find_fragment_viewPager"></android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/find_fragment_imageView"
                android:orientation="horizontal"
                android:layout_margin="10sp"
                android:layout_centerHorizontal="true"
                android:layout_alignRight="@id/find_fragment_viewPager"
                android:layout_alignBottom="@id/find_fragment_viewPager"></LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6sp"
            android:background="@color/lightGrey">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发帖"
                android:id="@+id/btn_add_comment"
                android:layout_alignParentRight="true"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/find_select_spinner"
                android:layout_centerInParent="true"
                android:entries="@array/find_select"
                android:textAlignment="center"
                android:layout_toLeftOf="@id/btn_add_comment"></Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_find_listview"
                android:layout_margin="6sp"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:layout_alignBottom="@+id/fragment_find_listview"
                android:layout_alignEnd="@+id/fragment_find_listview"
                android:layout_marginRight="48sp"
                android:layout_marginBottom="36sp"
                app:srcCompat="@drawable/ic_refresh_white_36dp"
                app:backgroundTint="@color/colorAccent"
                android:id="@+id/fragment_find_refreshbtn"
                app:fabSize="mini"
                />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>
