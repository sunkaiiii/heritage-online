<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sunkai.heritage.Fragment.FindFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_margin="12dp">

                        <RelativeLayout
                            android:id="@+id/find_fragment_search_relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12sp"
                            android:layout_marginRight="12sp">

                            <TextView
                                android:id="@+id/find_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:hint="@string/search"
                                android:layout_marginLeft="4dp" />

                            <ImageView
                                android:id="@+id/find_searchbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_search_grey_400_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/find_text"
                                android:layout_marginTop="6dp"
                                android:background="@color/lightGrey" />
                        </RelativeLayout>

                    </RelativeLayout>
                </android.support.design.widget.CollapsingToolbarLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimeryToBtn">
                <Spinner
                    android:id="@+id/find_select_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:entries="@array/find_select"
                    android:textAlignment="center"/>
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_find_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/superLightGrey"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layoutManager="@string/linearLayoutManager"/>

        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fragmentFindAddCommentBtn"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="36sp"
            android:layout_marginEnd="48sp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_add_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48sp" />
    </RelativeLayout>

</FrameLayout>
