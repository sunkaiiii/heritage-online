<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGrey"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:ignore="Overdraw">

    <ImageButton
        android:id="@+id/add_comment_btn_send"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_circle_button_coloraccent"
        android:contentDescription="@string/add_comment_reply"
        android:elevation="6dp"
        android:src="@drawable/ic_send_white_24dp"
        android:stateListAnimator="@animator/button_transitionz_animator"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/add_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/add_comment_btn_send"
        android:layout_toStartOf="@id/add_comment_btn_send"
        android:background="@color/white"
        android:hint="@string/add_comment_reply_here"
        android:minHeight="48dp" />

</RelativeLayout>