<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_history_grey_700_24dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/no_mean_content"/>

    <TextView
        android:id="@+id/search_history_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/imageView2"
        android:layout_toStartOf="@id/search_history_delete_history"
        android:textColor="@color/black"
        android:gravity="center|start"
        android:layout_toLeftOf="@id/search_history_delete_history"
        android:layout_toRightOf="@id/imageView2" />

    <ImageView
        android:id="@+id/search_history_delete_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_clear_black_24dp"
        android:contentDescription="@string/delete_this_history"/>

</RelativeLayout>