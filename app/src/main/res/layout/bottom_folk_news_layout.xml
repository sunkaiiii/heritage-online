<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/bottom_view_image"
        android:layout_width="112dp"
        android:layout_height="73dp"
        android:scaleType="centerCrop"
        android:layout_margin="12dp"
        android:layout_gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/news_layout_linear"
        android:layout_toLeftOf="@id/bottom_view_image"
        android:layout_toStartOf="@id/bottom_view_image">

        <TextView
            android:id="@+id/bottom_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bottom_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bottom_view_briefly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        android:layout_below="@id/news_layout_linear"
        android:id="@+id/bottom_view_bottom_images_linear"
        android:visibility="gone"
        android:layout_marginBottom="12dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerCrop"
            android:id="@+id/bottom_view_bottom_image1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"
            android:id="@+id/bottom_view_bottom_image2"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:id="@+id/bottom_view_bottom_image3"/>
    </LinearLayout>


</RelativeLayout>