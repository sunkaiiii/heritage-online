<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/superLightGrey"
    tools:context="com.example.sunkai.heritage.activity.AddFindCommentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_comment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:hint="@string/add_comment_title"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/add_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:hint="@string/add_comment_content"
            android:inputType="text" />

        <ImageView
            android:id="@+id/add_comment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/add_comment_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add_circle_black_48dp" />
    </LinearLayout>
</ScrollView>
