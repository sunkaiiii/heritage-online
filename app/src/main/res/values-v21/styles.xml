<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginActivityTheme" parent="Theme.Design.Light.NoActionBar">
        <!--让状态栏透明-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <style name="JoinActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="UserCommentDetailTheme" parent="AppThemeNoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@transition/find_item_transition</item>
        <item name="android:windowSharedElementEnterTransition">@transition/find_item_share_transition</item>
    </style>

</resources>